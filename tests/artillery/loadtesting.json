{
  "config": {
    "target": "http://127.0.0.1:3030",
    "http": {
      "timeout": 10
    },
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 1,
        "name": "second-try"
      }
    ],
    "payload": {
      "path": "product_ids.csv",
      "fields": ["id"]
    }
  },
  "scenarios": [
    {
      "name": "View Products",
      "flow": [
        {
          "loop": [
            {
              "get": {
                "url": "/reviews/{{ id }}/list"
              }
            },
            {
              "get": {
                "url": "/reviews/{{ id }}/meta"
              }
            }
          ],
          "count": "1"
        }
      ]
    }
  ]
}